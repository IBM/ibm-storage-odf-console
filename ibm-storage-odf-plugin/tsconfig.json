{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2016",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "exclude": [
    ".yarn",
    "**/node_modules",
    "**/dist"
  ],
  "include": ["src"]
}
