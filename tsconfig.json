{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2016",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "paths": {
      "@openshift-console/dynamic-plugin-sdk/api": [
        "node_modules/@openshift-console/dynamic-plugin-sdk/lib/api/api"
      ],
      "@openshift-console/dynamic-plugin-sdk/internalAPI": [
        "node_modules/@openshift-console/dynamic-plugin-sdk/lib/api/internal"
      ],
      "@openshift-console/dynamic-plugin-sdk/common": [
        "node_modules/@openshift-console/dynamic-plugin-sdk/lib/api/common-types"
      ],
      "@openshift-console/dynamic-plugin-sdk/webpack": [
        "node_modules/@openshift-console/dynamic-plugin-sdk/lib/webpack"
      ]
    }
  },
  "include": ["src"]
}
